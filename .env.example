# Example environment variables for Emby Comments
# Copy this file to .env and modify the values as needed

# 数据库配置
DATABASE_URL="file:data.db"
# 如果需要连接到其他数据库，请使用以下格式之一：
# PostgreSQL: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
# MySQL: mysql://USER:PASSWORD@HOST:PORT/DATABASE
# SQLite: file:./data.db

# 环境模式
NODE_ENV="development" # production 或 development

# 打印 Prisma 查询日志, 仅当 NODE_ENV 为 development 时有效
PRISMA_LOG_QUERIES="false"

# Optional: Custom port
# PORT=3000

# Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED=1

# Emby 服务器配置 (用于调试)
DEBUG_EMBY_URL="http://localhost:8096"
DEBUG_EMBY_API_KEY="your-api-key-here"
